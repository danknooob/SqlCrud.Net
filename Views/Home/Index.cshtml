@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="hero-section text-center mb-5 py-5 bg-light border rounded">
    <div class="container">
        <h1 class="display-3 fw-bold mb-4 text-dark">
            <i class="fas fa-store me-3 text-primary"></i>Product Management System
        </h1>
        <p class="lead mb-4 text-muted">Streamline your inventory with our powerful CRUD application built on ASP.NET MVC</p>
        <div class="d-flex justify-content-center gap-3 flex-wrap">
            <a asp-controller="Products" asp-action="Create" class="btn btn-primary btn-lg px-4">
                <i class="fas fa-plus me-2"></i>Add Product
            </a>
            <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary btn-lg px-4">
                <i class="fas fa-list me-2"></i>View Products
            </a>
        </div>
    </div>
</div>

@if (ViewBag.TotalProducts > 0)
{
    <!-- Statistics Cards -->
    <div class="row mb-5">
        <div class="col-md-4 mb-4">
            <div class="card border-0 h-100">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-box fa-4x text-primary"></i>
                    </div>
                    <h2 class="card-title fw-bold text-dark">@ViewBag.TotalProducts</h2>
                    <p class="card-text fs-5 text-dark">Total Products</p>
                    <small class="text-muted">Manage your inventory</small>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 h-100">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-tags fa-4x text-primary"></i>
                    </div>
                    <h2 class="card-title fw-bold text-dark">@ViewBag.TotalCategories</h2>
                    <p class="card-text fs-5 text-dark">Categories</p>
                    <small class="text-muted">Organize by type</small>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 h-100">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-check-circle fa-4x text-primary"></i>
                    </div>
                    <h2 class="card-title fw-bold text-dark">@ViewBag.ActiveProducts</h2>
                    <p class="card-text fs-5 text-dark">Active Products</p>
                    <small class="text-muted">Currently available</small>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <!-- Empty State Alert -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card border-0 text-center">
                <div class="card-body py-5">
                    <h1 class="text-dark mb-3">No Data Available!</h1>
                    <h3 class="text-dark mb-4">Your system is completely empty</h3>
                    <p class="lead text-muted mb-4">
                        <strong>You must enter product details to use this system.</strong><br>
                        The database contains no products, categories, or inventory data.
                    </p>
                    <div class="d-flex justify-content-center gap-3 flex-wrap">
                        <a asp-controller="Products" asp-action="Create" class="btn btn-primary btn-lg">
                            <i class="fas fa-plus me-2"></i>Enter Product Details Now
                        </a>
                        <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary btn-lg">
                            <i class="fas fa-list me-2"></i>View Empty Inventory
                        </a>
                    </div>
                    <p class="mt-4 text-muted">
                        <small><strong>Action Required:</strong> Add at least one product to start managing your inventory</small>
                    </p>
                </div>
            </div>
        </div>
    </div>
}


<!-- Quick Actions -->
<div class="row mt-5">
    <div class="col-12">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-light text-center">
                <h3 class="mb-0 text-primary">
                    <i class="fas fa-bolt me-2"></i>Quick Actions
                </h3>
                <p class="text-muted mb-0">Get started with these common tasks</p>
            </div>
            <div class="card-body p-4">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="text-center">
                            <a asp-controller="Products" asp-action="Create" class="btn btn-primary btn-lg w-100 mb-2">
                                <i class="fas fa-plus me-2"></i>Add New Product
                            </a>
                            <small class="text-muted">Create a new product entry</small>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="text-center">
                            <a asp-controller="Products" asp-action="Index" class="btn btn-success btn-lg w-100 mb-2">
                                <i class="fas fa-list me-2"></i>View All Products
                            </a>
                            <small class="text-muted">Browse your inventory</small>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="text-center">
                            <a asp-controller="Home" asp-action="Privacy" class="btn btn-info btn-lg w-100 mb-2">
                                <i class="fas fa-shield-alt me-2"></i>Privacy Policy
                            </a>
                            <small class="text-muted">Learn about our privacy practices</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="row mt-5">
    <div class="col-12">
        <div class="text-center mb-5">
            <h2 class="text-primary">
                <i class="fas fa-star me-2"></i>Why Choose Our System?
            </h2>
            <hr class="w-25 mx-auto">
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100 border-0 shadow-sm text-center">
            <div class="card-body">
                <i class="fas fa-rocket fa-3x text-primary mb-3"></i>
                <h5 class="card-title">Fast & Efficient</h5>
                <p class="card-text">Built with modern technologies for optimal performance and user experience.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100 border-0 shadow-sm text-center">
            <div class="card-body">
                <i class="fas fa-shield-alt fa-3x text-success mb-3"></i>
                <h5 class="card-title">Secure & Reliable</h5>
                <p class="card-text">Enterprise-grade security with data validation and error handling.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100 border-0 shadow-sm text-center">
            <div class="card-body">
                <i class="fas fa-mobile-alt fa-3x text-info mb-3"></i>
                <h5 class="card-title">Responsive Design</h5>
                <p class="card-text">Works seamlessly across all devices - desktop, tablet, and mobile.</p>
            </div>
        </div>
    </div>
</div>

<style>
    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.15) !important;
    }
    
    .hero-section {
        animation: fadeInUp 1s ease-out;
    }
    
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
</style>

