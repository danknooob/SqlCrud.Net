@{
    ViewData["Title"] = "Create Product";
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h2 class="mb-0">
                    <i class="fas fa-plus me-2"></i>Create New Product
                </h2>
            </div>
            <div class="card-body">
                <form id="productForm" method="post" action="/Products/Create">
                    @Html.AntiForgeryToken()
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="productName" class="form-label">Product Name</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-tag"></i></span>
                                <input type="text" name="Name" id="productName" class="form-control" placeholder="Enter product name" autocomplete="off" />
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="productCategory" class="form-label">Category</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-folder"></i></span>
                                <input type="text" name="Category" id="productCategory" class="form-control" placeholder="Enter category" autocomplete="off" />
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="productDescription" class="form-label">Description</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-align-left"></i></span>
                            <textarea name="Description" id="productDescription" class="form-control" rows="3" placeholder="Enter product description (optional)" autocomplete="off"></textarea>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="productPrice" class="form-label">Price</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
                                <input type="number" name="Price" id="productPrice" class="form-control" placeholder="0.00" step="0.01" autocomplete="off" />
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="productStock" class="form-label">Stock Quantity</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-boxes"></i></span>
                                <input type="number" name="StockQuantity" id="productStock" class="form-control" placeholder="0" autocomplete="off" />
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="form-check">
                            <input type="checkbox" name="IsActive" id="productActive" class="form-check-input" value="true" />
                            <label for="productActive" class="form-check-label">
                                <i class="fas fa-check-circle me-1"></i>Product is active
                            </label>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to List
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-1"></i>Create Product
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    // Ensure form is completely empty on page load
    document.addEventListener('DOMContentLoaded', function() {
        // Clear all form fields
        document.getElementById('productName').value = '';
        document.getElementById('productCategory').value = '';
        document.getElementById('productDescription').value = '';
        document.getElementById('productPrice').value = '';
        document.getElementById('productStock').value = '';
        document.getElementById('productActive').checked = false;
        
        // Clear any browser autofill
        setTimeout(function() {
            document.getElementById('productName').value = '';
            document.getElementById('productCategory').value = '';
            document.getElementById('productDescription').value = '';
            document.getElementById('productPrice').value = '';
            document.getElementById('productStock').value = '';
            document.getElementById('productActive').checked = false;
        }, 100);
    });
</script>