@model Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="row">
    <div class="col-lg-6 mx-auto">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h2 class="mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>Delete Product
                </h2>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-warning me-2"></i>
                    <strong>Warning!</strong> Are you sure you want to delete this product? This action cannot be undone.
                </div>

                <div class="card bg-light mb-3">
                    <div class="card-body">
                        <h5 class="card-title text-primary">@Model.Name</h5>
                        <p class="card-text">
                            <strong>Category:</strong> @Model.Category<br>
                            <strong>Stock:</strong> @Model.StockQuantity units<br>
                            <strong>Created:</strong> @Model.DateCreated.ToString("MMM dd, yyyy")<br>
                            <strong>Status:</strong> 
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </p>
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <p class="card-text">
                                <strong>Description:</strong><br>
                                <small class="text-muted">@Model.Description</small>
                            </p>
                        }
                    </div>
                </div>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Cancel
                        </a>
                        <div>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info me-2">
                                <i class="fas fa-eye me-1"></i>View Details
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-1"></i>Delete Product
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
