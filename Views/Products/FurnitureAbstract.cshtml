<div class="container-fluid">
    <div class="row">
        <!-- Header Section -->
        <div class="col-12 mb-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-4 fw-bold text-warning">
                        <i class="fas fa-couch me-3"></i>@category - @factoryType
                    </h1>
                    <p class="lead text-muted">Abstract Factory Pattern for Furniture Products</p>
                </div>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-warning btn-lg dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-plus me-2"></i>Add Furniture Product
                    </button>
                    <ul class="dropdown-menu">
                        <li><h6 class="dropdown-header">Furniture Products</h6></li>
                        <li><a class="dropdown-item" asp-action="CreateSofa">
                            <i class="fas fa-couch me-2"></i>Add Sofa
                        </a></li>
                        <li><a class="dropdown-item" asp-action="CreateTable">
                            <i class="fas fa-table me-2"></i>Add Table
                        </a></li>
                        <li><a class="dropdown-item" asp-action="CreateBed">
                            <i class="fas fa-bed me-2"></i>Add Bed
                        </a></li>
                        <li><a class="dropdown-item" asp-action="CreateCurtains">
                            <i class="fas fa-window-maximize me-2"></i>Add Curtains
                        </a></li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Product Type Cards -->
        <div class="col-12 mb-4">
            <div class="row">
                <div class="col-md-3 mb-3">
                    <div class="card border-warning h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-couch fa-3x text-warning mb-3"></i>
                            <h5 class="card-title">Sofas</h5>
                            <p class="card-text">Comfortable seating furniture</p>
                            <a asp-action="CreateSofa" class="btn btn-warning">
                                <i class="fas fa-plus me-1"></i>Add Sofa
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="card border-success h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-table fa-3x text-success mb-3"></i>
                            <h5 class="card-title">Tables</h5>
                            <p class="card-text">Dining and work tables</p>
                            <a asp-action="CreateTable" class="btn btn-success">
                                <i class="fas fa-plus me-1"></i>Add Table
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="card border-info h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-bed fa-3x text-info mb-3"></i>
                            <h5 class="card-title">Beds</h5>
                            <p class="card-text">Sleeping furniture</p>
                            <a asp-action="CreateBed" class="btn btn-info">
                                <i class="fas fa-plus me-1"></i>Add Bed
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="card border-secondary h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-window-maximize fa-3x text-secondary mb-3"></i>
                            <h5 class="card-title">Curtains</h5>
                            <p class="card-text">Window coverings</p>
                            <a asp-action="CreateCurtains" class="btn btn-secondary">
                                <i class="fas fa-plus me-1"></i>Add Curtains
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Products Section -->
        <div class="col-12">
            <div class="products-section">
                @if (Model.Any())
                {
                    <div class="products-grid">
                        @foreach (var item in Model)
                        {
                            <div class="product-block">
                                <div class="block-header">
                                    <h3 class="product-name">@item.Name</h3>
                                    <span class="product-category">@item.Category</span>
                                </div>
                                
                                <div class="block-content">
                                    <div class="description-section">
                                        <p class="product-description">@item.Description</p>
                                    </div>
                                    
                                    <div class="stock-section">
                                        <div class="stock-quantity">
                                            <i class="fas fa-boxes me-1"></i>@item.StockQuantity units
                                        </div>
                                        <div class="stock-status">In Stock</div>
                                    </div>
                                    
                                    <div class="date-section">
                                        <i class="fas fa-calendar"></i>
                                        <span>Created: @item.DateCreated.ToString("MMM dd, yyyy")</span>
                                    </div>
                                    
                                    <div class="status-section">
                                        <span class="status-badge @(item.IsActive ? "active" : "inactive")">
                                            @(item.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </div>
                                </div>
                                
                                <div class="block-actions">
                                    <a asp-action="CategoryDetails" asp-route-category="@item.Category" asp-route-id="@item.Id" class="action-link">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                    <a asp-action="CategoryEdit" asp-route-category="@item.Category" asp-route-id="@item.Id" class="action-link">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a asp-action="CategoryDelete" asp-route-category="@item.Category" asp-route-id="@item.Id" class="action-link">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="no-products text-center py-5">
                        <div class="card border-0">
                            <div class="card-body">
                                <h1 class="text-dark mb-3">No Furniture Products Available</h1>
                                <h3 class="text-dark mb-4">Start creating furniture products using Abstract Factory!</h3>
                                <p class="lead text-muted mb-4">
                                    <strong>Choose a product type above to get started.</strong><br>
                                    Use the Abstract Factory Pattern to create specific furniture products.
                                </p>
                                <div class="d-flex justify-content-center gap-3 flex-wrap">
                                    <a asp-action="CreateSofa" class="btn btn-warning btn-lg">
                                        <i class="fas fa-couch me-2"></i>Add Sofa
                                    </a>
                                    <a asp-action="CreateTable" class="btn btn-success btn-lg">
                                        <i class="fas fa-table me-2"></i>Add Table
                                    </a>
                                    <a asp-action="CreateBed" class="btn btn-info btn-lg">
                                        <i class="fas fa-bed me-2"></i>Add Bed
                                    </a>
                                    <a asp-action="CreateCurtains" class="btn btn-secondary btn-lg">
                                        <i class="fas fa-window-maximize me-2"></i>Add Curtains
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

