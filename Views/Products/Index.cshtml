@model IEnumerable<Product>

@{
    ViewData["Title"] = "Product Management";
}

<div class="container-fluid">
    <div class="row">
        <!-- Header Section with Add Product Link -->
        <div class="col-12 mb-4">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="display-4 fw-bold text-primary">
                    <i class="fas fa-box me-3"></i>Product Management
                </h1>
                <a asp-action="Create" class="btn btn-success btn-lg px-4">
                    <i class="fas fa-plus me-2"></i>Add Product
                </a>
            </div>
        </div>
        
        <!-- Products Section -->
        <div class="col-12">
            <div class="products-section">
                @if (Model.Any())
                {
                    <div class="products-grid">
                        @foreach (var item in Model)
                        {
                            <div class="product-block">
                                <div class="block-header">
                                    <h3 class="product-name">@item.Name</h3>
                                    <span class="product-category">@item.Category</span>
                                </div>
                                
                                <div class="block-content">
                                    <div class="description-section">
                                        @if (!string.IsNullOrEmpty(item.Description))
                                        {
                                            <p class="product-description">@item.Description</p>
                                        }
                                        else
                                        {
                                            <p class="no-description">NO DESCRIPTION</p>
                                        }
                                    </div>
                                    
                                    <div class="price-section">
                                        <div class="formatted-price">â‚¹ @item.Price.ToString("N2")</div>
                                        <div class="price-label">Price</div>
                                        <div class="raw-price">@((int)item.Price * 10000)</div>
                                    </div>
                                    
                                    <div class="stock-section">
                                        <div class="stock-status">In Stock</div>
                                    </div>
                                    
                                    <div class="date-section">
                                        <i class="fas fa-calendar"></i>
                                        <span>Created: @item.DateCreated.ToString("MMM dd, yyyy")</span>
                                    </div>
                                    
                                    <div class="status-section">
                                        <span class="status-badge @(item.IsActive ? "active" : "inactive")">
                                            @(item.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </div>
                                </div>
                                
                                <div class="block-actions">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="action-link">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="action-link">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="action-link">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="no-products text-center py-5">
                        <div class="card">
                            <div class="card-body">
                                <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                                <h3 class="text-muted">No Products Found</h3>
                                <p class="text-muted mb-4">Start by adding your first product to the system.</p>
                                <a asp-action="Create" class="btn btn-success btn-lg">
                                    <i class="fas fa-plus me-2"></i>Add Your First Product
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}