<div class="container-fluid">
    <div class="row">
        <!-- Header Section with Add Product Link -->
        <div class="col-12 mb-4">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="display-4 fw-bold text-primary">
                    <i class="fas fa-box me-3"></i>Product Management
                </h1>
                <a asp-action="Create" class="btn btn-success btn-lg px-4">
                    <i class="fas fa-plus me-2"></i>Add Product
                </a>
            </div>
        </div>
        
        <!-- Products Section -->
        <div class="col-12">
            <div class="products-section">
                @if (Model != null && Model.Any())
                {
                    <div class="products-grid">
                        @foreach (var item in Model)
                        {
                            <div class="product-block">
                                <div class="block-header">
                                    <h3 class="product-name">@item.Name</h3>
                                    <span class="product-category">@item.Category</span>
                                </div>
                                
                                <div class="block-content">
                                    <div class="description-section">
                                        @if (!string.IsNullOrEmpty(item.Description))
                                        {
                                            <p class="product-description">@item.Description</p>
                                        }
                                        else
                                        {
                                            <p class="no-description">NO DESCRIPTION</p>
                                        }
                                    </div>
                                    
                                    <div class="stock-section">
                                        <div class="stock-quantity">
                                            <i class="fas fa-boxes me-1"></i>@item.StockQuantity units
                                        </div>
                                        <div class="stock-status">In Stock</div>
                                    </div>
                                    
                                    <div class="date-section">
                                        <i class="fas fa-calendar"></i>
                                        <span>Created: @item.DateCreated.ToString("MMM dd, yyyy")</span>
                                    </div>
                                    
                                    <div class="status-section">
                                        <span class="status-badge @(item.IsActive ? "active" : "inactive")">
                                            @(item.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </div>
                                </div>
                                
                                <div class="block-actions">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="action-link">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="action-link">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="action-link">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="no-products text-center py-5">
                        <div class="card border-0">
                            <div class="card-body">
                                <h1 class="text-dark mb-3">No Products Available</h1>
                                <h3 class="text-dark mb-4">Your inventory is currently empty!</h3>
                                <p class="lead text-muted mb-4">
                                    <strong>Please add product details to get started.</strong><br>
                                    Click the button below to create your first product entry.
                                </p>
                                <a asp-action="Create" class="btn btn-primary btn-lg">
                                    <i class="fas fa-plus me-2"></i>Add Product Details Now
                                </a>
                                <p class="mt-3 text-muted">
                                    <small>You need to enter product information to manage your inventory</small>
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}