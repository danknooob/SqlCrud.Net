<div class="container-fluid">
    <div class="row">
        <!-- Header Section -->
        <div class="col-12 mb-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-4 fw-bold text-primary">
                        <i class="fas fa-microchip me-3"></i>@category - @factoryType
                    </h1>
                    <p class="lead text-muted">Abstract Factory Pattern for Electronics Products</p>
                </div>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-primary btn-lg dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-plus me-2"></i>Add Electronics Product
                    </button>
                    <ul class="dropdown-menu">
                        <li><h6 class="dropdown-header">Electronics Products</h6></li>
                        <li><a class="dropdown-item" asp-action="CreateMobilePhone">
                            <i class="fas fa-mobile-alt me-2"></i>Add Mobile Phone
                        </a></li>
                        <li><a class="dropdown-item" asp-action="CreateLaptop">
                            <i class="fas fa-laptop me-2"></i>Add Laptop
                        </a></li>
                        <li><a class="dropdown-item" asp-action="CreateHeadphones">
                            <i class="fas fa-headphones me-2"></i>Add Headphones
                        </a></li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Product Type Cards -->
        <div class="col-12 mb-4">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <div class="card border-primary h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-mobile-alt fa-3x text-primary mb-3"></i>
                            <h5 class="card-title">Mobile Phones</h5>
                            <p class="card-text">Smartphones and mobile devices</p>
                            <a asp-action="CreateMobilePhone" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>Add Mobile Phone
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card border-success h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-laptop fa-3x text-success mb-3"></i>
                            <h5 class="card-title">Laptops</h5>
                            <p class="card-text">Portable computers and notebooks</p>
                            <a asp-action="CreateLaptop" class="btn btn-success">
                                <i class="fas fa-plus me-1"></i>Add Laptop
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card border-info h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-headphones fa-3x text-info mb-3"></i>
                            <h5 class="card-title">Headphones</h5>
                            <p class="card-text">Audio devices and headphones</p>
                            <a asp-action="CreateHeadphones" class="btn btn-info">
                                <i class="fas fa-plus me-1"></i>Add Headphones
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Products Section -->
        <div class="col-12">
            <div class="products-section">
                @if (Model.Any())
                {
                    <div class="products-grid">
                        @foreach (var item in Model)
                        {
                            <div class="product-block">
                                <div class="block-header">
                                    <h3 class="product-name">@item.Name</h3>
                                    <span class="product-category">@item.Category</span>
                                </div>
                                
                                <div class="block-content">
                                    <div class="description-section">
                                        <p class="product-description">@item.Description</p>
                                    </div>
                                    
                                    <div class="stock-section">
                                        <div class="stock-quantity">
                                            <i class="fas fa-boxes me-1"></i>@item.StockQuantity units
                                        </div>
                                        <div class="stock-status">In Stock</div>
                                    </div>
                                    
                                    <div class="date-section">
                                        <i class="fas fa-calendar"></i>
                                        <span>Created: @item.DateCreated.ToString("MMM dd, yyyy")</span>
                                    </div>
                                    
                                    <div class="status-section">
                                        <span class="status-badge @(item.IsActive ? "active" : "inactive")">
                                            @(item.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </div>
                                </div>
                                
                                <div class="block-actions">
                                    <a asp-action="CategoryDetails" asp-route-category="@item.Category" asp-route-id="@item.Id" class="action-link">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                    <a asp-action="CategoryEdit" asp-route-category="@item.Category" asp-route-id="@item.Id" class="action-link">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a asp-action="CategoryDelete" asp-route-category="@item.Category" asp-route-id="@item.Id" class="action-link">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="no-products text-center py-5">
                        <div class="card border-0">
                            <div class="card-body">
                                <h1 class="text-dark mb-3">No Electronics Products Available</h1>
                                <h3 class="text-dark mb-4">Start creating electronics products using Abstract Factory!</h3>
                                <p class="lead text-muted mb-4">
                                    <strong>Choose a product type above to get started.</strong><br>
                                    Use the Abstract Factory Pattern to create specific electronics products.
                                </p>
                                <div class="d-flex justify-content-center gap-3 flex-wrap">
                                    <a asp-action="CreateMobilePhone" class="btn btn-primary btn-lg">
                                        <i class="fas fa-mobile-alt me-2"></i>Add Mobile Phone
                                    </a>
                                    <a asp-action="CreateLaptop" class="btn btn-success btn-lg">
                                        <i class="fas fa-laptop me-2"></i>Add Laptop
                                    </a>
                                    <a asp-action="CreateHeadphones" class="btn btn-info btn-lg">
                                        <i class="fas fa-headphones me-2"></i>Add Headphones
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
