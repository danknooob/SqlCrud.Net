@model Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">
                        <i class="fas fa-box me-2"></i>@Model.Name
                    </h2>
                    <span class="badge bg-light text-primary fs-6">@Model.Category</span>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <h4>Description</h4>
                        <p class="text-muted">
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                @Model.Description
                            }
                            else
                            {
                                <em>No description provided</em>
                            }
                        </p>

                        <h4>Product Information</h4>
                        <div class="table-responsive">
                            <table class="table table-borderless">
                                <tbody>
                                    <tr>
                                        <td><strong>Product ID:</strong></td>
                                        <td>@Model.Id</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Stock Quantity:</strong></td>
                                        <td>
                                            <span class="badge bg-primary fs-6">@Model.StockQuantity</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Date Created:</strong></td>
                                        <td>
                                            <i class="fas fa-calendar me-1"></i>
                                            @Model.DateCreated.ToString("MMMM dd, yyyy 'at' h:mm tt")
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Status:</strong></td>
                                        <td>
                                            @if (Model.IsActive)
                                            {
                                                <span class="badge bg-success fs-6">
                                                    <i class="fas fa-check me-1"></i>Active
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger fs-6">
                                                    <i class="fas fa-times me-1"></i>Inactive
                                                </span>
                                            }
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <i class="fas fa-box fa-4x text-primary mb-3"></i>
                                <h5>Product Summary</h5>
                                <hr>
                                <div class="mb-3">
                                    <strong>Days Since Created:</strong><br>
                                    <span class="text-info fs-5">@((DateTime.Now - Model.DateCreated).Days)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-light">
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Back to List
                    </a>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                            <i class="fas fa-edit me-1"></i>Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i>Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
